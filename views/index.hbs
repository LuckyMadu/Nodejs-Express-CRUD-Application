<div class="container">
   <div class="row">
        <div class="col-md-2">
        </div>
        <div class="col-md-8">
            <h2>Add User</h2>
            <form method="post" action="/addUser">
                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">First Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="staticEmail" placeholder="firstname" name="fname">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Last anme</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="staticEmail" placeholder="lastname" name="lname">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="staticEmail" placeholder="email" name="email">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Profession</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="staticEmail" placeholder="profession" name="prof">
                    </div>
                </div>
                <button type="submit" class="btn btn-success">Add user</button>
            </form>
        </div>
        <div class="col-md-2">

        </div>
    </div>

    <hr/>
    <div class="row">
        <div class="col-md-2">

        </div>
        <div class="col-md-8">
            <h2>User Table</h2>
            <table class="table table-hover">
                <thead>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Profession</th>
                    <th>Actions</th>
                </thead>
                <tbody>

                {{#each users}}    
                    <tr>
                        <td>{{this.fname}}</td>
                        <td>{{this.lname}}</td>
                        <td>{{this.email}}</td>
                        <td>{{this.prof}}</td>
                        <td>
                           <a href="/edit/{{this.id}}"><button type="submit" class="btn btn-primary">Edit</button></a>  
                           <a href="/deleteUser/{{this.id}}"><button type="submit" class="btn btn-danger">Delete</button></a> 
                        </td>
                    </tr>
                {{/each}} 
                </tbody>
            </table>
        </div>
        <div class="col-md-2">

        </div>


    </div>


</div>