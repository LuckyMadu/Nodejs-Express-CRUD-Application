<div class="container">
   <div class="row">
        <div class="col-md-2">
        </div>
        <div class="col-md-8">
            <h2>Update User</h2>
            {{#each userData}}
            <form method="post" action="/updateUser/{{this.id}}">
                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">First Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="staticEmail" placeholder="firstname" name="fname" value={{this.fname}}>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Last anme</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="staticEmail" placeholder="lastname" name="lname" value={{this.lname}}>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="staticEmail" placeholder="email" name="email" value={{this.email}}>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Profession</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="staticEmail" placeholder="profession" name="prof" value={{this.prof}}>
                    </div>
                </div>
                <button type="submit" class="btn btn-success">Update Records</button>
            </form>
            {{/each}}
        </div>
        <div class="col-md-2">

        </div>
    </div>
    
</div>